<div class="pagination-custom">
  <ul class="pagination {% if paginate.previous and paginate.next %} pagination__has_item {% else %} pagination__no_items{% endif %}">
  {% if paginate.previous %}
    <li><a href="{{ paginate.previous.url }}" title="{{ paginate.previous.title }}"><span class="icon lnr lnr-arrow-left"></span> {{ 'general.pagination.previous' | t }}</a></li>
  {% else %}
    <li class="disabled"><span><span class="icon lnr lnr-arrow-left"></span> {{ 'general.pagination.previous' | t }}</span></li>
  {% endif %}

  {% for part in paginate.parts %}
    {% if part.is_link %}
      <li>
        <a href="{{ part.url }}" title="">{{ part.title }}</a>
      </li>
    {% else %}
      {% if part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
      {% else %}
        <li><span>{{ part.title }}</span></li>
      {% endif %}
    {% endif %}
  {% endfor %}

  {% if paginate.next %}
    <li><a href="{{ paginate.next.url }}" title="{{ paginate.next.title }}">{{ 'general.pagination.next' | t }} <span class="icon lnr lnr-arrow-right"></span></a></li>
  {% else %}
    <li class="disabled"><span>{{ 'general.pagination.next' | t }} <span class="icon lnr lnr-arrow-right"></span></span></li>
  {% endif %}
</ul>
</div>