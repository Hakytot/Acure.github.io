<article id="{{ section.id }}" class="page">  
    <div class="container">  
        {% if section.settings.enable_breadcrumb %}
            {% include 'breadcrumb' %}      
        {% endif %}   
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <header class="page-header text-center">
                    {% if section.settings.show_page_title %}
                        <h1 class="page-title">
                            <span>{{ page.title }}</span>      
                        </h1>
                    {% endif %}     
                </header> 
                <section class="page-content rte">
                    {{ page.content }}            
                </section>
            </div>
        </div>            
    </div>  
</article>

{% schema %}
{
    "name": "Shipping Returns Page",
    "class": "shopify-section__shipping_returns_template",
    "settings": [{
        "type": "checkbox",
        "id": "enable_breadcrumb",
        "label": "Enable Breadcrumb",
        "default": true
    }, {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show Page Title",
        "default": true
    }]
}
{% endschema %}