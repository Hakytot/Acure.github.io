<article id="{{ section.id }}" class="page">  
    <div class="container">  
        {% if section.settings.enable_breadcrumb %}
            {% include 'breadcrumb' %}      
        {% endif %}       
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <header class="page-header text-center">
                    {% if section.settings.show_page_title %}
                        <h1 class="page-title">
                            <span>{{ page.title }}</span>      
                        </h1>
                    {% endif %}     
                    {% if section.settings.show_sub_page_title and section.settings.sub_page_title != blank %}
                        <div class="sub-page-title">
                            {{ section.settings.sub_page_title | html }}
                        </div>
                    {% endif %}
                </header> 
                <section class="page-content rte">
                    {{ page.content }}            
                </section> 
            </div>
        </div>
    </div>  
</article>

{% schema %}
{
    "name": "FAQ Page",
    "class": "shopify-section__faq-template",
    "settings": [{
        "type": "checkbox",
        "id": "enable_breadcrumb",
        "label": "Enable Breadcrumb",
        "default": false
    }, {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show Page Title",
        "default": true
    }, {
        "type": "checkbox",
        "id": "show_sub_page_title",
        "label": "Show Sub Page Title",
        "default": true
    }, {
        "type": "richtext",
        "id": "sub_page_title",
        "label": "Sub Page Title",
        "default": "<p>For general questions regarding our services or products, please check below to see if we have answered them. <br> Can't find your answers? Don't worry, we've got you covered. Please contact us <a href=\"contact\"><em>here</em></a>.</p>"
    }]
}
{% endschema %}