<article id="{{ section.id }}" class="page">  
    <div class="container">  
        {% if section.settings.enable_breadcrumb %}
            {% include 'breadcrumb' %}      
        {% endif %}   
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <header class="page-header text-center">
                    {% if section.settings.show_page_title %}
                        <h1 class="page-title">
                            <span>{{ page.title }}</span>      
                        </h1>
                    {% endif %}     
                </header>                 
                <section class="page-content rte">                    
                    {% if section.settings.enable_video_story and section.settings.video_story_url != blank %}
                        <div id="video_story" class="video_story">                                                                                                               
                            <iframe src="{{ section.settings.video_story_url }}" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>                            
                        </div>                        
                    {% endif %}   
                    {{ page.content }}            
                </section>
            </div>
        </div>            
    </div>  
</article>

{% schema %}
{
    "name": "About Us",
    "class": "shopify-section__about_template",
    "settings": [{
        "type": "checkbox",
        "id": "enable_breadcrumb",
        "label": "Enable Breadcrumb",
        "default": true
    }, {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show Page Title",
        "default": true
    }, {
        "type": "checkbox",
        "id": "enable_video_story",
        "label": "Enable Video Story",
        "default": true
    }, {
        "id": "video_story_url",
        "type": "video_url",
        "label": "Video Story URL",
        "accept": ["youtube", "vimeo"],
        "default": "https://player.vimeo.com/video/210603721?color=a67ef1&title=0&byline=0&portrait=0"
    }]
}
{% endschema %}