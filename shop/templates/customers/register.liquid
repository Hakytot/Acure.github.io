<div id="register-page" class="page">
    <div class="container">
        {% include 'breadcrumb' %}
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <header class="page-header text-center">
                    <h1 class="page-title">
                        <span>{{ 'customer.register.title' | t }}</span>
                    </h1>    
                </header>                
                <div class="form-vertical">
                    {% form 'create_customer' %}
                        {{ form.errors | default_errors }}
                        <div class="form-group">
                            <label for="FirstName" class="hidden-label">{{ 'customer.register.first_name' | t }}</label>
                            <input type="text" name="customer[first_name]" id="FirstName" class="form-control input-full" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="LastName" class="hidden-label">{{ 'customer.register.last_name' | t }}</label>
                            <input type="text" name="customer[last_name]" id="LastName" class="form-control input-full" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
                        </div>
                        <div class="form-group">
                            <label for="Email" class="hidden-label">{{ 'customer.register.email' | t }}</label>
                            <input type="email" name="customer[email]" id="Email" class="form-control input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
                        </div>
                        <div class="form-group">
                            <label for="CreatePassword" class="hidden-label">{{ 'customer.register.password' | t }}</label>
                            <input type="password" name="customer[password]" id="CreatePassword" class="form-control input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.register.password' | t }}">
                        </div>
                        <div class="form-group form-group__button clearfix">                            
                            <button type="submit" value="{{ 'customer.register.submit' | t }}" class="btn btn--primary pull-left">
                                <span>{{ 'customer.register.submit' | t }}</span>
                            </button>                                        
                            <p class="pull-right recover__password">
                                <a class="btn btn--link" href="{{ shop.url }}">{{ 'customer.register.cancel' | t }}</a>
                            </p>            
                        </div>                        
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</div>