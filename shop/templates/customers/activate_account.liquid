<div class="page">
    <div class="container">
        {% include 'breadcrumb' %}   
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <header id="admin_header" class="page-header text-center">        
                    <h2 class="page-title">
                        <span>{{ 'customer.activate_account.title' | t }}</span>
                    </h2>
                    <p>{{ 'customer.activate_account.subtext' | t }}</p>
                </header>            
                <div class="page-content text-center">
                    {% form 'activate_customer_password' %}
                        {{ form.errors | default_errors }}
                        <div class="form-group">                
                            <label for="CustomerPassword" class="hidden-label">{{ 'customer.activate_account.password' | t }}</label>
                            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="form-control" placeholder="{{ 'customer.activate_account.password' | t }}">
                        </div>
                        <div class="form-group">                
                            <label for="CustomerPasswordConfirmation" class="hidden-label">{{ 'customer.activate_account.password_confirm' | t }}</label>
                            <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="form-control" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">        
                        </div>
                        <div class="form-group">                
                            <input type="submit" class="btn btn--primary btn--full" value="{{ 'customer.activate_account.submit' | t }}">
                            <input type="submit" class="btn btn--outline btn--full" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">        
                        </div>        
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</div>