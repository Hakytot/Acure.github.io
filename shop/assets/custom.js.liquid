$(document).ready(function() {
    $(".slider").slick({
        autoplay: true,
        dots: true,
        customPaging : function(slider, i) {
            var thumb = $(slider.$slides[i]).data('thumb');
            return '<span class="slider-thumb"><img src="'+thumb+'"></span>';
        },
        responsive: [{ 
            breakpoint: 500,
            settings: {
                dots: false,
                arrows: false,
                infinite: false,
                slidesToShow: 2,
                slidesToScroll: 2
            } 
        }]
    });
});