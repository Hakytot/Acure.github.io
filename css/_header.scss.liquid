/* Header */
#header {     
    @include mobile{
        background-color: #FFFFFF;
        color: $primaryColor;      
    }   
    a{
        color: {{ settings.header_link_color }}; 
        &:hover{
            color: {{ settings.header_link_hover_color }}; 
        }
    }
    @include mobile{      
        a{
            color: $primaryColor;
            &:hover{
                color: $primaryColor;    
            }
        }
    }
    @include flexbox();    
    @include align-items(center);
    @include justify-content(flex-start);    
    @include flex-flow(row wrap);
    color: {{ settings.header_color }}; 
    background: {{ settings.header_bg_color }};       
    @include rem(padding, 23px 125px);  
    .search-field{
        .search-submit{
            background: transparent;
            color: $accentColor;    
            padding: 0;
            @include rem(font-size, 24px);            
        }        
    }
}
.header-nav{    
    @include flexbox();        
    @include flex(1 0 25%);    
    @include justify-content(flex-start);
}
.logo{      
    @include flexbox();        
    @include flex(1 0 25%);    
    @include justify-content(center);        
    h1{
        margin: 0;
    }
    .site-header__logo-link{              
        @include rem(font-size, 24px);
        font-weight: 700;
    }
}  
.site-actions{    
    @include flexbox();        
    @include justify-content(flex-end);
    @include flex(1 0 25%);     
    .site-actions-cart{
        position: relative;
        color: $accentColor;                
        .icon{
            @include rtl-float-left();
            @include rem(font-size, 24px);
        }
        .cart_count{
            color: #FFFFFF;                        
            background: $primaryColor;    
            font-weight: 500;                
            text-align: center;                        
            @include rtl-float-left();
            @include rem(margin, -5px 0 0 -10px);
            @include rem(width, 20px);
            @include rem(width, 20px);                        
            @include border-radius(50px);            
            @include rem(line-height, 20px);            
            @include rem(font-size, 12px);            
        }
    }
}

.site-actions-search{
    .icon{        
        @include rem(font-size, 24px);
        @include rem(width,30px);        
        @include rem(height,30px);        
        @include rtl-float-left();
        @include rem(margin, 0 0px 0 18px);        
        @include rem(padding, 0px 5px);
    }    
}
#search-modal{
    background: transparent;    
    border: 0;    
    margin: auto;
    @include rem(max-width, 800px);    
    @include css3-prefix(box-shadow,none); 
}