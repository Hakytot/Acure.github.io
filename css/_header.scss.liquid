/* Header */
#header {     
    @include mobile{
        background-color: #FFFFFF;
        color: $primaryColor;      
    }   
    a{
        color: {{ settings.header_link_color }}; 
        &:hover{
            color: {{ settings.header_link_hover_color }}; 
        }
    }
    @include mobile{      
        a{
            color: $primaryColor;
            &:hover{
                color: $primaryColor;    
            }
        }
    }
    @include flexbox();    
    @include align-items(center);
    color: {{ settings.header_color }}; 
    background: {{ settings.header_bg_color }};       
    @include rem(padding, 23px 125px);  
    .search-field{
        .search-submit{
            background: transparent;
            color: $accentColor;    
            padding: 0;
            @include rem(font-size, 24px);            
        }
    }
}
.header-nav{    
    @include flex-grow(0);    
}
.logo{
    @include flex-basis(1%);
    @include flex-grow(1);    
    &.logo-align--center{
        text-align: center;
        @include align-content(center);
    }
    h1{
        margin: 0;
    }
    .site-header__logo-link{              
        @include rem(font-size, 24px);
        font-weight: 700;
    }
}  
.site-actions{    
    @include flexbox();    
    @include flex-grow(0);
    @include align-items(center);
    .site-actions-cart{
        position: relative;
        color: $accentColor;                
        .icon{
            @include rtl-float-left();
            @include rem(font-size, 24px);
        }
        .cart_count{
            color: #FFFFFF;                        
            background: $primaryColor;    
            font-weight: 500;                
            text-align: center;                        
            @include rtl-float-left();
            @include rem(margin, -5px 0 0 -10px);
            @include rem(width, 20px);
            @include rem(width, 20px);                        
            @include border-radius(50px);            
            @include rem(line-height, 20px);            
            @include rem(font-size, 12px);            
        }
    }
}