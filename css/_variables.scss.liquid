// Drawers
$drawerNavWidth: 462px !default;
$drawerCartWidth: 462px !default;
$drawerTransition: all .6s cubic-bezier(.77,0,.175,1) !default;

/*================ Sizing Variables ================*/
$width-site: 1170px !default;
$gutter-site: 30px !default;
$gutter-site-mobile: 15px !default;
$section-spacing: 50px !default;
$section-spacing-small: 30px !default;
$border-radius: 2px !default;

/*================ Z-Index ================*/
$z-index-dropdown : 7 !default;
$z-index-sub-nav: 8 !default;
$z-index-drawer: 9 !default;
$z-index-notification-bar: 10 !default;
$z-index-skip-to-content: 10000 !default; 

/*================ SVG ================*/
$svg-select-icon: #{'{{ "ico-select.svg" | asset_url }}'} !default;

/*================ Drawers ================*/
$transition-drawer: all 0.45s cubic-bezier(0.29, 0.63, 0.44, 1) !default;

/*================ Hero ================*/
$color-background-hero-button: #fff !default;
$color-text-hero-button: #000 !default;

/*================ Hero Slider ================*/
$color-slideshow-arrows: #000 !default;
$color-slideshow-dots: #fff !default;

$transition-text-slideshow: all 0.6s cubic-bezier(0.44, 0.13, 0.48, 0.87) !default;
$transition-image-slideshow: opacity 0.8s cubic-bezier(0.44, 0.13, 0.48, 0.87) !default;

$slick-font-family: "slick-icons, sans-serif" !default;
$slick-arrow-color: $color-slideshow-arrows !default;
$slick-dot-color: $color-slideshow-dots !default;
