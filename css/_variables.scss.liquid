$slick-next-character: '\2192' !default;
$slick-dot-character: '\2022' !default;
$slick-dot-size: 6px !default;
$slick-opacity-default: 0.75 !default;
$slick-opacity-on-hover: 1 !default;
$slick-opacity-not-active: 0.25 !default;

$slideshow-height-small: 475px !default;
$slideshow-height-medium: 650px !default;
$slideshow-height-large: 775px !default;
$slideshow-loader: #fff !default;
$z-index-slideshow-image: 1 !default;
$z-index-slideshow-video: 2 !default;
$z-index-slideshow-text: 3 !default;
$z-index-slideshow-controls: 4 !default;
$color-slideshow-close-bg: #fff !default;
