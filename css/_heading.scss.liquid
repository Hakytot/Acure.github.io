.section-title{
    margin: 0;
    padding: 0;
    text-transform: $headerTransform;
    font-family: $headerFontStack;
    font-weight: $headerFontWeight;
    font-size: $headerFontSize;
    letter-spacing: $headerLetterSpacing;
    line-height: $headerLineHeight;
    color: $headingColor;
    span{
        outline: none;
    }
    &.section-title__light{
        color: #FFFFFF;
    }
    &.custom_block_title{
        font-size: $customBlockFontSize;
        line-height: $customBlockLineHeight;             
        @include rem(margin-bottom, 5px);   
    }
}