.testimonials{
    position: relative;    
    background-position: 0 0;
    background-repeat: no-repeat;            
    @include rem(padding, 93px 0);
    &:before{
        position: absolute;
        top: 0;
        left: 0;
        content: "";        
        width: 100%;
        height: 100%;
        background: rgba($primaryColor, .6);            
    }
    .testimonials_container{
        z-index: 1;
        position: relative;    
    }
    &.testimonials--small{        
        min-height: 600px;        
    }
    &.testimonials--medium{        
        min-height: 700px;        
    }
    &.testimonials--large{        
        min-height: 800px;        
    }   
    .testimonials-icon{
        display: block;        
        @include rem(margin, 10px 0 0 0);
    }
    .testimonials_description{
        font-weight: 300;
        color: $testimonialTextColor;                
        @include rem(font-size, 18px);        
        @include rem(line-height, 30px);        
        @include rem(margin, 0 550px);        
        @include rem(padding, 50px 0 20px 0);
    }
    .testimonials_author{
        font-style: normal;    
        display: block;                
        color: $testimonialLinkColor;        
        font-weight: $accentFontWeight;        
        font-family: $accentFontStack;        
        @include rem(font-size, 16px);        
        @include rem(line-height, 30px);
        @include rem(margin-bottom, 20px);
    }
    .testimonials_image{                
        margin: 0 auto;        
        overflow: hidden;
        @include rem(height, 95px);
        @include rem(width, 95px);        
        img{
            border: 4px solid rgba(#FFFFFF, .65);
            @include border-radius(100%);            
        }
    }
    .icon {
        display: inline-block;    
        vertical-align: middle;
        fill: currentColor;    
        @include rem(height, 30px);
        @include rem(width, 30px);        
        .no-svg & {
            display: none;
        }
    }
    .testimonials_slick{
        margin-bottom: 0;
    }
    .slick-dots{
        margin: 0;
        padding: 0;
        list-style: none;
        text-align: center;
        position: absolute;
        left: -9999px;
        margin-left: -9999px;
        > li{
            display: inline-block;
            float: none;
            &.slick-active{
                button{
                    &:before{
                        position: absolute;
                        top: 0;
                        left: 0;
                        content: "";
                        background: #FFFFFF;
                        display: block;
                        width: 6px;
                        height: 6px;                        
                        @include border-radius(100%); 
                        @include rem(margin, 3px);                            
                    }
                }                
            }
            button{
                position: relative;
                padding: 0;                
                font-size: 0;                                
                text-indent: -99999px;
                background: transparent;                
                @include rem(border, 2px solid #FFFFFF); 
                @include rem(margin, 0 4px);                            
                @include rem(width, 16px);
                @include rem(height, 16px);
                @include border-radius(50px); 
            }
        }
    }
}