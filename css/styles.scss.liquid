/*================ Responsive Table ================*/

$breakpoint-alpha: 768px; 

table {
  margin: 1em 0;
  min-width: 265px;     
  th {
    display: none; 
  }  
  td {
    display: block;     
    &:first-child {
      padding-top: .5em;
    }
    &:last-child {
      padding-bottom: .5em;
    }
  }  
  th, td {
    text-align: left;    
    @media (min-width: $breakpoint-alpha) {
      display: table-cell;
      padding: .25em .5em;      
      &:first-child {
        padding-left: 0;
      }      
      &:last-child {
        padding-right: 0;
      }
    }
  }  
}


/*================ Mobile ================*/

@media only screen and (max-width : 768px) {  
    .widget-title{
        @include rem(font-size,28px);
    }
    .single-product .product-single__photos.carousel, 
    .single-product .product-single__photos.zoom{
        margin-bottom: 40px;
    } 
}

@media only screen and (max-width : 320px) {
    .cart__row{
        button{
            padding: 10px 30px;
        }
    }
}
