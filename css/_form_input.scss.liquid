input[type="button"], input[type="reset"], input[type="submit"]{
    &:hover,&:focus,&:active{
        color: $buttonHover;  
        background-color: $buttonBackgroundHover;
        border-color: $buttonBorderHover; 
    }          
}

input[type="search"],
input[type="text"],
input[type="password"],
input[type="email"],
input[type="datetime-local"],
input[type="date"],
input[type="month"],
input[type="number"],
input[type="range"],
input[type="tel"],
input[type="time"]{    
    background-color: $inputFormBg;  
}

.subscribe-button{
    color: {{ settings.button-text-color}};    
    background-color: {{ settings.button-background-color}};  
}
.subscribe-button:hover,.subscribe-button:focus,.subscribe-button:active{
    color: {{ settings.button-text-hover-color}};      
    background-color: {{ settings.button-background-hover}}; 
}

button, optgroup{
    font-family: $buttonFontStack;
    color: $primaryColor;  
}

select{    
    background-size: 10px auto;  
}