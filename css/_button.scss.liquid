.button, button, .btn,  
.submit, submit, input[type="submit"],
.btn--primary{    
    font-family: $buttonFontStack;
    text-transform: $buttonTransform;    
    font-weight: $buttonFontWeight;
    letter-spacing: $buttonLetterSpacing;
    background-color: $buttonBackgroundColor;
    color: $buttonColor;
    line-height: normal;
    display: inline-block;
    position: relative;
    border: 0;
    cursor: pointer;
    @include rem(padding, 15px 40px);  
    @include rem(font-size, $buttonFontSize);    
    @include css3-prefix(transition,color 0.25s ease);     
    @include border-radius(50px);
}

.button:hover, .button:focus, .button:active, .submit:focus, .submit:hover, 
.btn--primary:hover,.btn--primary:active,.btn--primary:focus, .submit:active, 
button:active, button:hover, button:focus,.subscribe-button:hover, 
.subscribe-button:focus, .subscribe-button:active{     
    color: $buttonHover;              
}

.btn{  
    &.btn--secondary{        
        color: $buttonSecondColor;
        background-color: $buttonSecondBackgroundColor;
        border: 2px solid $buttonSecondColor;
        &:hover,
        &:active,
        &:focus{        
            border-color: $buttonSecondColor;            
        }
    }   
    &.button-video{
        background: transparent;
        text-transform: $bodyTransform;
        font-size: $bodyFontSize;
        font-family: $bodyFontStack;
        font-weight: $bodyFontWeight;                
        letter-spacing: $bodyLetterSpacing;  
        @include rem(line-height, 38px);    
        @include rem(padding,20px 40px);  
        color: $bodyColor;
        .video-icon{
            color: $primaryColor;
            border: 3px solid $primaryColor;
            @include rem(width,38px);            
            @include rem(height,38px);          
            @include rtl-float-left();
            @include border-radius(100%);  
            @include rem(padding, 0px 14px);
            @include rem(line-height, 34px);               
            @include rem(margin-right, 14px);
        }
    } 
}

.search__submit{
    background: transparent;
}