.button, button, .btn,  
.submit, submit, input[type="submit"],
.btn--primary{    
    font-family: $buttonFontStack;
    text-transform: $buttonTransform;    
    font-weight: $buttonFontWeight;
    letter-spacing: $buttonLetterSpacing;
    background-color: $buttonBackgroundColor;
    color: $buttonColor;
    line-height: normal;
    display: inline-block;
    position: relative;
    border: 0;
    cursor: pointer;
    @include rem(padding, 15px 40px);  
    @include rem(font-size, $buttonFontSize);    
    @include css3-prefix(transition,color 0.25s ease);     
    @include border-radius(50px);
}

.button:hover, .button:focus, .button:active, .submit:focus, .submit:hover, 
.btn--primary:hover,.btn--primary:active,.btn--primary:focus, .submit:active, 
button:active, button:hover, button:focus,.subscribe-button:hover, 
.subscribe-button:focus, .subscribe-button:active{     
    color: $buttonHover;              
}

.btn{  
    &.btn--secondary{        
        color: $buttonSecondColor;
        background-color: $buttonSecondBackgroundColor;
        &:hover,
        &:active,
        &:focus{        
            border-color: {{ settings.button_second_bg_color}};
            color: {{ settings.button_second_hover_color}};      
            background-color: {{ settings.button_second_bg_hover_color}};
        }
    }    
}